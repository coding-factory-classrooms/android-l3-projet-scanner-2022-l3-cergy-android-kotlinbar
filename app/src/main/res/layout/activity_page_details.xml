<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2B2828"
        android:foregroundTint="#FDFDFD"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100px"
            android:background="#CCA434"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#120D0D"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            tools:text="Nom du produit" />

        <ImageView
            android:id="@+id/imageProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="375px"
            android:layout_marginBottom="50px"
            tools:src="@tools:sample/avatars" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#120D0D"
            android:textSize="15sp"
            android:textStyle="normal"
            android:background="#CCA434"
            tools:text="Ingrédients" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#120D0D"
            android:textSize="15sp"
            android:textStyle="normal"
            android:background="#CCA434"
            tools:text="Nom générique" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:text="TextView"

            android:textAlignment="center"
            android:textColor="#120D0D"
            android:textSize="15sp"
            android:textStyle="normal"
            android:background="#CCA434"
            tools:text="Conservation" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>